<h1><%= link_to 'add a task', new_task_path %></h1>
<%@tasks.each do |task|%>
  <h2><%= task.name %></h2>
  <h3><%= task.description %></h3>
  <%if task.status%>
    <h3>Done</h3>
  <%else%>
    <h3>Not done</h3>
  <%end%>
  <p>_______________________________________________________________</p>
<%end%>
